<div class="row">
  <h1>Welcome! These are the schools!</h1>
</div>

<% if @schools.any? %>
  <div class="row">
    <ul>
      <% @schools.each do |school| %>
        <li>
          <%= link_to school.name, school_path(school) %>
        </li>
      <% end %>
    </ul>
  </div>
<% else %>
  <div class="row">
    <h3 id='no-schools'>There are no schools. Everyone is stupid. :(</h3>
  </div>
<% end %>
<div class="row">
  <%= link_to 'New School', new_school_path, class: 'btn new-school-btn' %>
</div>